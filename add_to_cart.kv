<Cart>:
    name: "cart"
    MDBoxLayout:
        orientation: 'vertical' 
        size: 1, 1
        MDTopAppBar:
            title: "              CART"
            # md_bg_color: [0,0,1,1]
            # left_action_items: [['menu', lambda x :  arrow-left.set_state("open")]]
            MDIconButton:
                icon: "arrow-left"
                y:root.height - self.height / 2 - STANDARD_INCREMENT / 2
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = "menu"

        ScrollView:    
            MDBoxLayout:
                orientation: "vertical"
                MDList: 
                    id: dosa_list_item
                    name:"dosa"                           
                    ThreeLineAvatarListItem:
                        text: "DOSA"
                        secondary_text: "Rs: 25 "
                        ImageLeftWidget:
                            source: "Menu/dosa.png"
                        MDFillRoundFlatIconButton:
                            text: "+"
                            pos_hint: {"center_x":.8,"center_y": .3}
                            on_press:root.add_items()
                        MDFillRoundFlatIconButton:
                            id:dosa_item_count
                            text: "0"
                            pos_hint: {"center_x":.6,"center_y": .3}
                        MDFillRoundFlatIconButton:
                            text: "-"
                            pos_hint: {"center_x":.4,"center_y": .3}
                MDList: 
                    id: vada_list_item
                    name:"vada"                           
                    ThreeLineAvatarListItem:
                        text: "VADA"
