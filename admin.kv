<Admin>
    name:"admin"
    on_pre_enter:root.update()
    MDNavigationLayout:
        ScreenManage:
            Screen: 
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title: "Welcome Administrator"
                        left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                
                    MDFloatLayout:
                        ScrollView:
                            MDFloatLayout:
                                orientation:'vertical'
                                Image:
                                    source:"farmer.png"
                                    size_hint: .12,.38
                                    pos_hint: {"center_x":0.06,"center_y":0.94}

                                MDLabel:
                                    text: "Raw Materials:"
                                    font_name: "Lato"
                                    font_size: "20sp"
                                    pos_hint: {"center_y": .94}
                                    halign:"center"
                                    color: rgba(34,34,34,255)

                                Image:
                                    source:"ready-meal.png"
                                    size_hint: .12,.38
                                    pos_hint: {"center_x":0.06,"center_y":0.54}
                                MDLabel:
                                    text: "Product:"
                                    font_name: "Lato"
                                    font_size: "20sp"
                                    pos_hint: {"center_y": .54}
                                    halign:"center"
                                    color: rgba(34,34,34,255)

                                Image:
                                    source:"sales.png"
                                    size_hint: .12,.38
                                    pos_hint: {"center_x":0.06,"center_y":0.14}
                                MDLabel:
                                    text: "Sales:"
                                    font_name: "Lato"
                                    font_size: "20sp"
                                    pos_hint: {"center_y": .14}
                                    halign:"center"
                                    color: rgba(34,34,34,255)

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: '8dp'
                padding: '8dp'
                MDFillRoundFlatIconButton:
                    text: "YOUR PROFILE"
                    pos_hint: {"center_x": .5}
                    user_font_size: "38sp"

                Image: 
                    source: "software-engineer.png"
                    size_hint: .5, .5
                    pos_hint: {"center_x": .5}

                MDLabel:
                    text: root.username
                    size_hint_y: None
                    pos_hint: {"center_x": .8}
                    height: self.texture_size[1] 
                ScrollView: 
                    MDList:
                        OneLineListItem:
                            icon: 'account-plus'
                            text: 'Account Management'
                        OneLineListItem:
                            text: 'MENU'
                            on_press: 
                                root.manager.transition.direction = "left"
                                root.manager.current = "menudata"

                        OneLineListItem:
                            text: 'USER DATA ANALYSIS'
                            on_press:
                                root.manager.transition.direction = "left"
                                root.manager.current = "userdata"
                        OneLineListItem:
                            text: 'SALES DATA ANALYSIS'
                            on_press:
                                root.manager.transition.direction = "left"
                                root.manager.current = "salesdata"
                        OneLineListItem:
                            text: 'IN OUT DATA ANALYSIS'
                            on_press:
                                root.manager.transition.direction = "left"
                                root.manager.current = "in_out"
                        OneLineListItem:
                            text: 'RAW DATA ANALYSIS'
                            on_press:
                                root.manager.transition.direction = "left"
                                root.manager.current = "raw_material"
                BoxLayout:
                    orientation:'vertical'
                    MDFillRoundFlatIconButton:
                        text: "About"
                        pos_hint: {"center_x": .5}
                        user_font_size: "50sp"
    
                    MDFillRoundFlatIconButton:
                        text: "Logout"
                        icon: "logout"
                        pos_hint: {"center_x": .5}
                        user_font_size: "36sp"
                        on_press:
                            root.manager.transition.direction = "left"
                            root.manager.current = "main"

