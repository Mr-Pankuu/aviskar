<Admin>
    name:"admin"
    MDNavigationLayout:
        ScreenManage:
            Screen: 
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title: "Welcome Administrator"
                        left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                
                    MDFloatLayout:
                        ScrollView:
                            MDFloatLayout:
                                orientation:'vertical'
                                Image:
                                    source:"farmer.png"
                                    size_hint: .12,.38
                                    pos_hint: {"center_x":0.06,"center_y":0.94}

                                MDLabel:
                                    text: "Raw Materials:"
                                    font_name: "Lato"
                                    font_size: "20sp"
                                    pos_hint: {"center_y": .94}
                                    halign:"center"
                                    color: rgba(34,34,34,255)

                                Image:
                                    source:"ready-meal.png"
                                    size_hint: .12,.38
                                    pos_hint: {"center_x":0.06,"center_y":0.54}
                                MDLabel:
                                    text: "Product:"
                                    font_name: "Lato"
                                    font_size: "20sp"
                                    pos_hint: {"center_y": .54}
                                    halign:"center"
                                    color: rgba(34,34,34,255)

                                Image:
                                    source:"sales.png"
                                    size_hint: .12,.38
                                    pos_hint: {"center_x":0.06,"center_y":0.14}
                                MDLabel:
                                    text: "Sales:"
                                    font_name: "Lato"
                                    font_size: "20sp"
                                    pos_hint: {"center_y": .14}
                                    halign:"center"
                                    color: rgba(34,34,34,255)

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                MDFillRoundFlatIconButton:
                    text: "Menu"
                    size_hint: (.9,.02)
                    pos_hint: {"center_y": .95}
                    pos_hint: {"center_x": .5}
                    user_font_size: "36sp"
                    theme_text_color: "Custom"
                    text_color: rgba(26, 24, 58, 255)
                    on_press:
                        root.manager.transition.direction = "left"
                        root.manager.current = "menu"
                            # id: nav_drawer1
                MDFillRoundFlatIconButton:
                    text: "User Data"
                    size_hint: (.98,.02)
                    pos_hint: {"center_y": .95}
                    pos_hint: {"center_x": .5}
                    user_font_size: "36sp"
                    theme_text_color: "Custom"
                    text_color: rgba(26, 24, 58, 255)
                    on_press:          
                        root.manager.transition.direction = "left"
                        root.manager.current = "userdatatable"
                Spinner:
                    id: spinner_id
                    size_hint: (.98,.02)
                    text: "Analysis"
                    values:["Raw Materials analysis","Product analysis","Sales analysis"]
                    on_text: root.spinner_clicked(spinner_id.text)

                MDFillRoundFlatIconButton:
                    text: "Manage Accounts"
                    size_hint: (.98,.02)
                    pos_hint: {"center_y": .95}
                    pos_hint: {"center_x": .5}
                    user_font_size: "36sp"
                    theme_text_color: "Custom"
                    text_color: rgba(26, 24, 58, 255)
                    on_press:          
                        root.manager.transition.direction = "left"
                        root.manager.current = "account"
                MDLabel:
                    id: spinner_label
                    size_hint: (.98,.03)
                    text:root.spinner_text
                    font_name:"Lato"

                Spinner:
                    id: spinner_id
                    size_hint: (.98,.02)
                    text: "About"
                    values:{"Made for Rungta Campus"}
                    # on_text: root.spinner_clicked(spinner_id.text)
                MDFillRoundFlatIconButton:
                    text: "Sign out"
                    # icon: "sign out"
                    pos_hint: {"center_y": .95}
                    pos_hint: {"center_x": .5}
                    user_font_size: "30sp"
                    theme_text_color: "Custom"
                    text_color: rgba(26, 24, 58, 255)
                    on_release:
                        root.manager.transition.direction = "right"
                        root.manager.current = "main"
