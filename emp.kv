<Employee>
    name:"employee"
    MDNavigationLayout:
        ScreenManage:
            Screen: 
                MDBoxLayout:
                    orientation: 'vertical'
                    MDTopAppBar:
                        title: "Welcome"
                        left_action_items: [["menu",lambda x: nav_drawer.set_state("open")]]
                
                    MDFloatLayout:
                        ScrollView:
                            MDFloatLayout:
                                orientation:'vertical'
                                Image:
                                    source:"sales.png"
                                    size_hint: .12,.38
                                    pos_hint: {"center_x":0.06,"center_y":0.94}
                                MDLabel:
                                    text: "Sales:"
                                    font_name: "Lato"
                                    font_size: "20sp"
                                    pos_hint: {"center_y": .94}
                                    halign:"center"
                                    color: rgba(34,34,34,255)

        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation:'vertical'
                spacing: '8dp'
                padding: '8dp'
                MDFillRoundFlatIconButton:
                    text: "YOUR PROFILE"
                    pos_hint: {"center_x": .5}
                    user_font_size: "38sp"

                Image: 
                    source: "Employee\employe.png"
                    size_hint: .5, .5
                    pos_hint: {"center_x": .5}

                MDLabel:
                    text: "              Tuleshwar Sahu"
                    size_hint_y: None
                    pos_hint: {"center_x": .5}
                    height: self.texture_size[1] 
                ScrollView: 
                    MDList:
                        OneLineListItem:
                            text: 'MENU'
                        OneLineListItem:
                            text: 'SALES'
                        OneLineListItem:
                            text: 'PRODUCT'

            
                MDFillRoundFlatIconButton:
                    text: "About"
                    pos_hint: {"center_x": .5}
                    user_font_size: "50sp"

                MDFillRoundFlatIconButton:
                    text: "Logout"
                    icon: "logout"
                    pos_hint: {"center_x": .5}
                    user_font_size: "36sp"
                    on_press:
                        root.manager.transition.direction = "left"
                        root.manager.current = "main"

