#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT
#:import Animation kivy.animation.Animation
<Spacer@Widget>
    size_hint_y: None
    height: "20dp"

<MDFoodList>:
    id: food_list
    RelativeLayout:
        id: dosa
        size_hint_y: None
        height: "200dp"

        MDCard:
            padding: "96dp", 0, "68dp", "20dp"
            elevation: 0
            Widget:
                size_hint_x: .3
            MDBoxLayout:
                id: box
                orientation: "vertical"
                MDLabel:
                    text: "DOSA"
                    bold: True
                    font_style: "H5"
                    adaptive_height: True
                    color: app.theme_cls.primary_color
                Spacer:

                MDLabel:
                    text: "Masala"
                    bold: True
                    adaptive_height: True

                MDLabel:
                    text: "From 25-/Rs"
                    font_style: "Caption"
                    font_style: "H6"
                    adaptive_height: True

                Spacer:

                MDFillRoundFlatButton:
                    id: dosa_order_button
                    text: "ORDER"
                    -width: box.width
                    -height: "48dp"
                    on_release: 
                        Animation(x=0, d=0.4, t="in_back").start(dosa_back)
                        dosa_order_button.disabled = True
                        root.add_to_cart("dosa")

        MDRelativeLayout:
            id: dosa_back
            radius: [0, 15, 15,0]
            size_hint_y: None
            height: dosa.height - dp(24)
            md_bg_color: app.theme_cls.primary_color
            x: STANDARD_INCREMENT * 2 - dosa.width -STANDARD_INCREMENT
            y: dp(12)
            on_touch_down: 
                if self.collide_point(*args[1].pos):Animation(x=STANDARD_INCREMENT * 2 - dosa.width - STANDARD_INCREMENT,d=0.4, t="out_back").start(dosa_back)
                dosa_order_button.disabled = False
                root.remove_from_cart("dosa")
            Image:
                source: "Menu/dosa.png"
                size_hint_x: None
                width: STANDARD_INCREMENT * 2
                x: dosa.width - self.width + STANDARD_INCREMENT

            MDLabel:
                text: "Added to the \nCart!"
                font_style: "H4"
                adaptive_height: True
                x: "12dp"
                y: "4dp"

