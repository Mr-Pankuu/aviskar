#:import STANDARD_INCREMENT kivymd.material_resources.STANDARD_INCREMENT
#:import Animation kivy.animation.Animation
<Spacer@Widget>
    size_hint_y: None
    height: "20dp"


<Food@RelativeLayout>
    size_hint_y: None
    height: "200dp"

    MDCard:
        padding: "96dp", 0, "68dp", "20dp"
        elevation: 0
        Widget:
            size_hint_x: .3
        MDBoxLayout:
            id: box
            orientation: "vertical"
            MDLabel:
                text: "DOSA"
                bold: True
                font_style: "H4"
                adaptive_height: True
                color: app.theme_cls.primary_color
            Spacer:

            MDLabel:
                text: "Masala"
                bold: True
                adaptive_height: True

            MDLabel:
                text: "From 25-/Rs"
                font_style: "Caption"
                font_style: "H6"
                adaptive_height: True

            Spacer:

            MDFillRoundFlatButton:
                text: "ORDER"
                -width: box.width
                -height: "48dp"
                on_release: Animation(x=0, d=0.4, t="in_back").start(box_info)

    MDRelativeLayout:
        id: box_info
        radius: [0, 15, 15,0]
        size_hint_y: None
        height: root.height - dp(24)
        md_bg_color: app.theme_cls.primary_color
        x: STANDARD_INCREMENT * 2 -root.width -STANDARD_INCREMENT
        y: dp(12)
        on_touch_down: 
            if self.collide_point(*args[1].pos):Animation(x=STANDARD_INCREMENT * 2 -root.width -STANDARD_INCREMENT,d=0.4, t="out_back").start(box_info)
        Image:
            source: "Menu/dosa.png"
            size_hint_x: None
            width: STANDARD_INCREMENT * 2
            x: root.width - self.width + STANDARD_INCREMENT
        
        MDLabel:
            text: "Welcome to the\n SRGI canteen!"
            font_style: "H4"
            adaptive_height: True
            x: "12dp"
            y: "4dp"

