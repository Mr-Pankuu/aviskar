#:include table.kv
#:include admin.kv
#:include men.kv
#:include login.kv
#:include signup.kv


<Adminhelp>
ScreenManage:
    Admin:
    Main:
    Login:
    Signup:
    Table:
    Men:
    
<Main>
    name:"main"
    MDFloatLayout:
        md_bg_color: 135,206,235,1
        Image:
            source:"ch.png"
            size_hint: .8,.8
            pos_hint: {"center_x":0.5,"center_y":0.65}
        MDLabel:
            text: "Welcome!"
            font_name: "Lato"
            font_size: "30sp"
            pos_hint: {"center_y": .38}
            halign:"center"
            color: rgba(34,34,34,255)
        MDLabel:
            text: "Hello! Best place for ordering food"
            font_name: "Lato"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5,"center_y": .3}
            halign:"center"
            color: rgba(127,127,127,255)
        Image:
            source:"upper.png"
            size_hint: .4,.7
            pos_hint: {"center_x":0.06,"center_y":0.93}
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5,"center_y": .18}
            font_name: "Lato"
            background_color: 0,0,0,0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]
        Button:
            text: "SIGN-UP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5,"center_y": .09}
            font_name: "Lato"
            background_color: 0,0,0,0
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]
