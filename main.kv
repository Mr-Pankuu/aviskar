#:kivy 2.1.0

MDScreen:
    name: "main"
    MDFloatLayout:
        md_bg_color: 135,206,235,1
        Image:
            source:"restor.jpg"
            size_hint: .8,.8
            pos_hint: {"center_x":0.5,"center_y":0.65}
        Image:
            source:"images.png"
            size_hint: .1,.1
            pos_hint: {"center_x":0.05,"center_y":0.93}
        # MDLabel:
        #     text: "Welcome!"
        #     font_name: "Lato"
        #     font_size: "23sp"
        #     pos_hint: {"center_x": 0.5,"center_y":0.90}
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5,"center_y": .18}
            background_color:0,0,0,0
            font_name: "Lato"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: (52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]
        Button:
            text: "SIGN-UP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5,"center_y": .09}
            background_color: 0,0,0,0
            font_name: "Lato"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
                
            canvas.before:
                Color:
                    rgb: (52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]