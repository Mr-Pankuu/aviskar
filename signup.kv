<Signup>
    name: "signup"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"
        Image:
            source: "namaste.png"
            size_hint: (".25sp", ".25sp")
            pos_hint: {"center_x": .5,"center_y": .86}
            halign:"center"
            # color: rgba(0,0,59,255)
        MDLabel:
            text: "Create a new account"
            font_name: "Lato"
            font_size: "18dp"
            pos_hint: {"center_x": .5,"center_y": .75}
            halign:"center"
            color: rgba(135 ,133,193, 255)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5,"center_y": .68}
            MDTextField:
                id: user_name_data
                hint_text: "Username"
                font_name: "Lato"
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5,"center_y": .5}
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5,"center_y": .57}
            MDTextField:
                id: email_data
                hint_text: "Email / Phone number"
                font_name: "Lato"
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5,"center_y": .5}
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5,"center_y": .46}
            MDTextField:
                id: password_data
                hint_text: "Password"
                font_name: "Lato"
                icon_right: 'eye-off'
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5,"center_y": .5}
                password: True

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5,"center_y": .35}
            MDTextField:
                id: confirm_password_data
                hint_text: "Cofirm Password"
                font_name: "Lato"
                icon_right: 'eye-off'
                helper_text_mode: "on_error"
                pos_hint: {"center_x": .5,"center_y": .5}
                password: True
        MDLabel:
            id: info
            text: root.message
            font_name: "Lato"
            font_size: "18sp"
            pos_hint: {"center_x": .5,"center_y": .21}
            halign:"center"
            color: rgba(255 ,0,0, 170)
        Button:
            text: "SIGNUP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5,"center_y": .27}
            background_color: 0,0,0,0
            font_name: "Lato"
            on_press:
                root.sign_up()
                # root.manager.transition.direction = "left"
                # root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius:[5]
        MDLabel:
            text: "or"
            color: rgba(52, 0, 231, 255)
            pos_hint: {"center_y": .18}
            font_size: "13sp"
            font_name: "Lato"
            halign: "center"
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .3,"center_y": .18}
        MDFloatLayout:
            md_bg_color: rgba(178, 178, 178, 255)
            size_hint: .3, .002
            pos_hint: {"center_x": .7,"center_y": .18}
        # MDLabel:
        #     text: "Social media login"
        #     font_name: "Lato"
        #     font_size: "13sp"
        #     halign: "center"
        #     pos_hint: {"center_y": .143}
        #     color: rgba(135, 133, 193, 255)
        # MDGridLayout:
        #     cols: 3
        #     size_hint: .48, .07
        #     pos_hint: {"center_x": .5,"center_y": .1}
        #     Image:
        #         source: "google.png"   
        #     Image:
        #         source: "facebook.png"  
        MDLabel:
            text: "Already have an account ->"
            font_name: "Lato"
            font_size: "11sp"
            pos_hint: {"center_x": .68,"center_y": .04}
            color: rgba(135, 133, 193, 255)
        MDTextButton:
            text: "sign-in"
            font_name: "Lato"
            font_size: "11sp"
            pos_hint: {"center_x": .79,"center_y": .04}
            color: rgba(52, 0 ,231, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
